{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "angular-animations": [
        "./node_modules/angular-animations"
      ]
    },
    "outDir": "../../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}